

<%= simple_form_for(@food_truck, html: {class: 'form-signin'}) do |f| %>
  <h3>Add A Food Truck</h3>
  <%= f.input :name,
              required: true,
              label: false,
              placeholder: 'Name',
              input_html: {class: 'form-control'} %>
              <br>

  <%= f.input :description,
              required: true,
              label: false,
              placeholder: 'Description',
              input_html: {class: 'form-control'} %>
  <br>
  <%= f.button :submit, value: 'Create Food Truck', class: 'btn btn-lg btn-primary btn-block' %>

<% end %>
